@model IEnumerable<WebApplication2.Models.Product>

@{
    ViewBag.Title = "Index";
}
@if(TempData["succes"] != null)
            {
                @Html.Raw( @TempData["succes"])
            }
<h2>Index</h2>
<li>@Html.ActionLink("Add Product", "AddProduct", "Test", new { area = "" }, new { @class = "btn btn-primary" })</li>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.pname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pcat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.pname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pcat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditProduct", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteProduct", new { id = item.Id },new {onclick = "return confirm('are you sure')"})
            </td>
        </tr>
    }

</table>
